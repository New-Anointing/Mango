@model LoginRequestDto

<form method="post">
    <div class="row text-center">
        <h1>Sign In</h1>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 offset-3 pb-2">
            <input asp-for="UserName" class="form-control" placeholder="UserName..." />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="col-12 col-md-6 offset-3 pb-2">
            <input asp-for="Password" class="form-control" type="password" placeholder="Password..." />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-12 col-md-6 offset-3 pb-2">
            <button type="submit" class="form-control btn btn-success" value="Submit">
                Login
            </button>
        </div>
    </div>
</form>
